<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">


    <ImageView
        android:id="@+id/Logo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_real_heart" />

    <TextView
        android:id="@+id/ResetPasswordBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Your Password"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/Logo"
        />
    <TextView
        android:id="@+id/ResetPasswordText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text ="No worries just enter your email to resest your password"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/ResetPasswordBanner"
        />
    <EditText
        android:id="@+id/ResetEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edges"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="Email"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:drawableStart="@drawable/email_icon"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@id/ResetPasswordText"/>

    <Button
        android:id="@+id/ResetPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textColor="@color/white_true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ResetEmail"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/grey_font"/>
    <TextView
        android:id="@id/SignInReturn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Return to Login"
        android:textColor="@color/black_true"
        android:layout_marginRight="120dp"
        android:layout_marginLeft="120dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf= "@id/ResetPasswordButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>