<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInfoActivity">


    <ImageView
        android:id="@+id/Logo"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_real_heart" />

    <TextView
        android:id="@+id/userinfo_banner_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Info"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/Logo"
        />
    <TextView
        android:id="@+id/userinfo_bannertet_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:text="Current user infromation click to update"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/userinfo_banner_textview"/>

    <EditText
        android:id="@+id/userinfo_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edges"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="Name"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:drawableStart="@drawable/email_icon"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@id/userinfo_bannertet_textview"/>
    <EditText
        android:id="@+id/userinfo_email_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edges"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="Email"
        android:textColor="@color/grey_font"
        android:textColorHint="@color/grey_font"
        android:drawableStart="@drawable/email_icon"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@id/userinfo_name_edittext"/>
